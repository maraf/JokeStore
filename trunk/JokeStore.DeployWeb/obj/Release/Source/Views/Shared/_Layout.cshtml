<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    @Html.Action("HtmlHead", "Layout")
</head>
<body>

    <div class="all">
        <div class="head">
            @Html.ActionLink("+Create", "create", "entry", null, new { @class = "create-link" })
            @if (User.Identity.IsAuthenticated)
            {
                <div class="logout-form">
                    @Html.ActionLink("Admin", "index", "admin")
                    |
                    @using (Html.BeginForm("logout", "account", FormMethod.Post, new { @class = "inline-form" }))
                    {
                        <input class="link-button" type="submit" value="Logout" />
                    }
                </div>
            }
            else
            {
                <a href="@Url.Action("login", "account")" class="login-form">Login</a>
            }

            @Html.Action("WebHead", "Layout")
        </div>
        <div class="body">
            <div class="category left">
                @Html.Action("Menu", "Category")
            </div>
            <div class="content left">
                @UI.Message(TempData["Message"] as JokeStore.Web.Models.HtmlMessage)

                @RenderBody()
            </div>
            <div class="clear"></div>
        </div>
        <div class="foot"></div>
    </div>

</body>
</html>
