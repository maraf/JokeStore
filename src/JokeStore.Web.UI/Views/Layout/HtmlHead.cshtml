@model JokeStore.Core.Entity.Domain
@{ 
    Layout = null;
}

<meta http-equiv="content-type" content="text/html; charset=utf-8" />
<meta name="description" content="@Model.Heading - @Model.SubHeading" />
<meta name="keywords" content="jokes,vtipy,quote,citáty" />
<meta name="robots" content="all, index, follow" />
<meta name="author" content="Marek Fišera" />

<title>
    @Model.Heading
    @if(@ViewBag.Title != null) {
        <text>:</text>
        @ViewBag.Title
    }
</title>
<link href="@Url.Content("~/Design/Styles/Common.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Design/Styles/Design.css")" rel="stylesheet" type="text/css" />
@if (!String.IsNullOrEmpty(Model.CssUrl) && !String.IsNullOrWhiteSpace(Model.CssUrl))
{
    <link href="@Url.Content(Model.CssUrl)" rel="stylesheet" type="text/css" />
}

<script src="@Url.Content("~/Design/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
