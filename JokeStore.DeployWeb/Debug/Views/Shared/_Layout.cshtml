<!DOCTYPE html>
<html>
<head>
    <title>
        @Html.Action("heading", "domain")
        @if(@ViewBag.Title != null) {
            <text>:</text>
            @ViewBag.Title
        }
    </title>
    <link href="@Url.Content("~/Design/Styles/Common.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Design/Styles/Design.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Design/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
</head>

<body>

    <div class="all">
        <div class="head">
            @Html.ActionLink("+Create", "create", "entry", null, new { @class = "create-link" })
            @if (User.Identity.IsAuthenticated)
            {
                <div class="logout-form">
                    @Html.ActionLink("Admin", "index", "admin")
                    |
                    @using (Html.BeginForm("logout", "account", FormMethod.Post, new { @class = "inline-form" }))
                    {
                        <input class="link-button" type="submit" value="Logout" />
                    }
                </div>
            }
            else
            {
                <a href="@Url.Action("login", "account")" class="login-form">Login</a>
            }

            <h1>@Html.Action("heading", "domain")</h1>
            <h4>@Html.Action("subheading", "domain")</h4>
        </div>
        <div class="body">
            <div class="category left">
                @Html.Action("Menu", "Category")
            </div>
            <div class="content left">
                @UI.Message(TempData["Message"] as JokeStore.Web.Models.HtmlMessage)

                @RenderBody()
            </div>
            <div class="clear"></div>
        </div>
        <div class="foot"></div>
    </div>

</body>
</html>
