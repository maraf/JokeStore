@model JokeStore.Core.Entity.Entry

@{
    ViewBag.Title = UI.CutString(Model.Content ?? "Create entry");
}

<div class="sub-head">
    <h2>Edit entry: @UI.CutString(Model.Content)</h2>
</div>

@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    
    <div class="editor-item">
        <div class="editor-label">
            @Html.LabelFor(model => model.Content)
        </div>
        <div class="editor-field h200">
            @Html.EditorFor(model => model.Content)
            @Html.ValidationMessageFor(model => model.Content)
        </div>
    </div>
    
    <div class="editor-item w200">
        <div class="editor-label">
            @Html.LabelFor(model => model.Category)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Category)
            @Html.ValidationMessageFor(model => model.Category)
        </div>
    </div>
    
    <div class="editor-item w200">
        <div class="editor-label">
            @Html.LabelFor(model => model.CategoryUrl)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CategoryUrl)
            @Html.ValidationMessageFor(model => model.CategoryUrl)
        </div>
    </div>
    
    <div class="editor-item w100 mt20">
        <div class="editor-field">
            @Html.EditorFor(model => model.Approved)
            @Html.LabelFor(model => model.Approved)
            @Html.ValidationMessageFor(model => model.Approved)
        </div>
    </div>
    <div class="clear"></div>
    
    <div class="editor-item">
        @if (Model.ImageData != null)
        { 
            <div class="entry-image">
                <img src="@Url.Action("getimage", "entry", new { EntryID = Model.ID })" title="@UI.CutString(Model.Content)" alt="@UI.CutString(Model.Content)" />
            </div>
        }
    </div>
    
    @Html.HiddenFor(e => e.ID)
    @Html.HiddenFor(e => e.Created)
    @Html.HiddenFor(e => e.Domain.ID)
    @Html.HiddenFor(e => e.ThumbsUp)
    @Html.HiddenFor(e => e.ThumbsDown)
    @Html.HiddenFor(e => e.Votes)
    
    <input type="submit" value="Save" />
    @Html.ActionLink("Cancel and return to List", "index")
}
