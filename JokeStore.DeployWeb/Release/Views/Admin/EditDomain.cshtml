@model JokeStore.Core.Entity.Domain

@{
    ViewBag.Title = "EditDomain";
}

<div class="sub-head">
    <h2>Domain: @(Model.Url ?? "new")</h2>
</div>

@using (Html.BeginForm("editdomain", "admin"))
{
    @Html.ValidationSummary()

    <div class="editor-item wmax">
        <div class="editor-label">
            @Html.LabelFor(model => model.Url)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Url)
            @Html.ValidationMessageFor(model => model.Url)
        </div>
        <div class="clear"></div>
    </div>

    <div class="editor-item wmax">
        <div class="editor-label">
            @Html.LabelFor(model => model.CssUrl)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CssUrl)
            @Html.ValidationMessageFor(model => model.CssUrl)
        </div>
        <div class="clear"></div>
    </div>

    <div class="editor-item wmax">
        <div class="editor-label">
            @Html.LabelFor(model => model.Heading)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Heading)
            @Html.ValidationMessageFor(model => model.Heading)
        </div>
        <div class="clear"></div>
    </div>

    <div class="editor-item wmax">
        <div class="editor-label">
            @Html.LabelFor(model => model.SubHeading)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SubHeading)
            @Html.ValidationMessageFor(model => model.SubHeading)
        </div>
        <div class="clear"></div>
    </div>

    <div class="editor-item wmax">
        <div class="editor-field">
            @Html.EditorFor(model => model.AutoApprove)
            @Html.LabelFor(model => model.AutoApprove)
        </div>
        <div class="clear"></div>
    </div>
    
    @Html.HiddenFor(model => model.ID)

    <div class="editor-item">
        <input type="submit" value="Save" />
    </div>
}